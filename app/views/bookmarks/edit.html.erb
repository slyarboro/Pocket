<h1>Edit Bookmark</h1>

<div class="row">
  <div class="col-md-8">
    <h2>Need a little Pocket change?</h2>
  </div>

  <div class="col-md-8">
    <%= form_for [@topic, @bookmark] do |f| %>
    <div class="form-group">
      <!-- <%= f.label :url %> -->
      <%= f.text_field :url, class: 'form-control', placeholder: "Update bookmark by pasting desired URL here." %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
      <!-- <%= link_to "Back", topic_path(@topic), class: "btn btn-primary" %> -->
    </div>
    <% end %>
  </div>
</div>
