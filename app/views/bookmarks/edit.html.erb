<h1>Edit Bookmark</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Need a little Pocket change?</h2>
    <!-- <ul>
      <li>Alterations available, here.</li>
    </ul> -->
  </div>
  <div class="col-md-8">
    <%= form_for [@bookmark.topic, @bookmark] do |f| %>
    <!-- <%= form_for [@topic, @bookmark] do |f| %> -->
    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter the URL" %>
    </div>
    <%= f.submit "Save", class: 'btn btn-success' %>
    <%= link_to "Back", topic_path(@bookmark.topic), class: "btn btn-primary" %>
     <% end %>
   </div>
 </div>
