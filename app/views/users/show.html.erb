<h3>My Bookmarks</h3>

 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <div class="media-body">
         <table class="table table-hover">
           <tbody>
             <tr class='js-items'>
               <br />
               <% @user_bookmarks.each do |topic, bookmarks| %>
                 <% bookmarks.each do |bookmark| %>
                   <%= render partial: 'bookmarks/bookmark', locals: { bookmark: bookmark } %>
                 <% end %>
                <% end %>
             </tr>
           </tbody>
         </table>
       </div>
     </div>
   </div>
 </div>

 <h3>My Likes</h3>

 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <div class="media-body">
         <table class="table table-hover">
           <tbody>
             <tr class='js-items'>
               <% @liked_bookmarks.each do |bookmark| %>
                 <td><%= link_to bookmark.url %></td>
                 <td><%= render partial: 'likes/like', locals: { bookmark: bookmark } %></td>
               <% end %>
             </tr>
           </tbody>
         </table>
       </div>
     </div>
   </div>
 </div>

