<div class='row'>
  <div class='col-md-8'>

    <h1>Sign In</h1>
    <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "example@pocket.com" %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "******" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Sign In", class: "btn btn-primary" %>
    </div>
    <% end %>

  </div>
</div>
