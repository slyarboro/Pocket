<div class="container">
  <div class="row">
    <center>
      <br /><br>
      <% if current_user %>
      <h1>Pocket Book</h1>
      <%= link_to "Create New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
      <% end %>
    </center>
  </div>
</div>

<div class="container">
<div class="row">
  <div class="col-md-12">
    <% @topics.each do |topic| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.title, topic %>
        </h4>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
