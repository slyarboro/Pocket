<%= form_for @topics do |f| %>

  <form role="form">
     <div class="form-group">
       <%= f.label :title %>
       <div class="controls">
         <%= f.text_field :title, placeholder: "Topic like it's hot." %>
       </div>
     </div>

     <div class="control-group">
       <%= f.label :body %>
       <div class="controls">
         <%= f.text_area :body, rows: 4, placeholder: "This is a text area for description", class: 'form-control' %>
       </div>
     </div>

     <br>

     <div class="control-group">
       <div class="controls">
         <%= f.submit "Save", class: 'btn-success' %>
       </div>
     </div>
  </form>

 <% end %>
