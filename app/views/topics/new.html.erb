<h1>Topic Generator</h1>

<%= render "form" %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  </div>
</div>
<% end %>

