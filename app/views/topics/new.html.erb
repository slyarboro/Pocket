<h1>New Topic</h1>

<div class="row">
  <div class="col-md-4">
    <p>Rocket guys for your Pocket size.</p>
    <ul>
      <li>Eugene Shoemaker.</li>
      <li>Gene Kranz.</li>
      <li>Gene Cernan.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Title your topic, toots." %>
      <br>
      <%= f.submit "Save", class: 'btn btn-success' %>
      <%= link_to "Back", topics_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
