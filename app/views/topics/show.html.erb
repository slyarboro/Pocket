<h1><%= (@topic.title) %></h1>
<small>
  <%= link_to "Edit Topic", edit_topic_path, class: "btn btn-warning btn-sm" %>
  <%= link_to "Delete Topic", @topic, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure you want to delete this topic?'} %>
  <%= link_to "Back", topics_path, class: "btn btn-primary btn-sm" %>
  <br>

  <%= @topic.bookmarks.each do |bookmark| %>
  <div class="media-heading">
    <div class="media-body">
      <h3 class="media-heading">
        <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
      </h3>
    </div>
  </div>
  <% end %>
</ul>

<h2>Add New Bookmark</h2>
<%= render partial: 'bookmarks/form', locals: { topic: @topic, bookmark: @bookmark} %>


