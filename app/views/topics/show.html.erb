<h1><%= @topic.title %></h1>
<br>

<br>
<% if current_user %>
  <div class="col-md-4">
    <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
<% end %>

<%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-primary' %>

<br>
<br>

<h3>Bookmarks</h3>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <tbody>
            <tr class='js-items'>
              <%= render @bookmarks %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
